//gop

import (
	"github.com/456vv/vforward"
	vweb "github.com/456vv/vweb/v2"
	builtin "github.com/456vv/vweb/v2/builtin"
	"log"
	"strconv"
	"fmt"
	"net"
	"time"
)

func main(T vweb.TemplateDoter) string {
	
	R := T.Request()
	G := T.Global()
	
	query := R.URL.Query()
	network := query.Get("Network")
	ipa := query.Get("Aaddr")
	ipb := query.Get("Baddr")
	porta := query.Get("Aport")
	portb := query.Get("Bport")
	status := query.Get("Status")
	if network == "" {
		network = "tcp"
	}
	if ipa == "" {
		ipa = "0.0.0.0"
	}
	if ipb == "" {
		return "Baddr 参数缺少"
	}
	if porta == "" {
		return "Aport 参数缺少"
	}
	if portb == "" {
		return "Bport 参数缺少"
	}
	portai, portaie := strconv.Atoi(porta)
	if Error(portaie) {
		return "Aport 非整数"
	}
	portbi, portbie := strconv.Atoi(portb)
	if Error(portbie) {
		return "Bport 非整数"
	}
	
	key := fmt.Sprint(network, ipa, porta, ipb, portb)
	
	if status == "start" {
		if G.Has(key+"l2d") {
			return "准备存在"
		}
		addra := &vforward.Addr{
			Network: "tcp",
			Local: &net.TCPAddr{
				IP: net.ParseIP(ipa),
				Port: portai,
			},
		}
		addrb := &vforward.Addr{
			Network: "tcp", 
			Remote: &net.TCPAddr{
				IP: net.ParseIP(ipb),
				Port: portbi,
			},
		}
		l2d := &vforward.L2D{
			MaxConn: 2,
		}
		l2dSwap, l2dSwape := l2d.Transport(addra, addrb)
		if Error(l2dSwape) {
			return "准备失败"
		}
		G.Set(key+"l2d", l2d)
		G.Set(key+"l2dSwap", l2dSwap)
		failure := MakeChan("bool", 1)
		Go(func(){
			e := l2dSwap.Swap()
			if Error(e) {
				G.Del(key+"l2dSwap")
				Send(failure, true)
				Close(failure)
			}
		})
		time.Sleep(time.Second)
		inf := TryRecv(failure)
		if NotNil(inf) {
			return "启动失败"
		}
		return "启动成功"
	}else if status == "pause" {
		if !G.Has(key+"l2dSwap") {
			return "不存在"
		}
		inf := G.Get(key+"l2dSwap")
		CallMethod(inf, "Close")
		return "暂时成功"
	}else if status == "restore" {
		if !G.Has(key+"l2dSwap") {
			return "不存在"
		}
		failure := MakeChan("bool", 1)
		Go(func(){
			inf := G.Get(key+"l2dSwap")
			retn, e := CallMethod(inf, "Swap")
			if Error(e) {
				log.Println(e)
				return
			}
			if Error(retn[0]) {
				Send(failure, true)
				Close(failure)
			}
		})
		time.Sleep(time.Second)
		inf := TryRecv(failure)
		if NotNil(inf) {
			return "恢复失败"
		}
		return "恢复成功"
	}else if status == "stop" {
		if !G.Has(key+"l2d") {
			return "不存在"
		}
		inf := G.Get(key+"l2d")
		CallMethod(inf, "Close")
		G.Del(key+"l2dSwap")
		G.Del(key+"l2d")
		return "停止成功"
	}
}